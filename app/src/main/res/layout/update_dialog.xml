<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="Update Available"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        app:fontName="Nunito-Bold.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E6E6E6" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:text="A new version of Vocab Mania is available, Would you like to update?"
        android:textColor="@color/colorHighlight"
        android:textSize="16sp"
        app:fontName="Nunito-Regular.ttf" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <com.msarangal.vocabmania.MyButton
            android:id="@+id/btnNoThanks"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="No, Thanks"
            android:textColor="@color/pink_five"
            app:FontButton="Nunito-Bold.ttf" />

        <com.msarangal.vocabmania.MyButton
            android:id="@+id/btnUpdate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Update"
            android:textColor="@color/pink_five"
            app:FontButton="Nunito-Bold.ttf" />
    </LinearLayout>

</LinearLayout>