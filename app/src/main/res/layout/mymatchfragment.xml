<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llqaa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/lltop"
    android:layout_centerInParent="true"
    android:background="#F2F2F2"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/light_grey"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:text="context"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        android:textStyle="normal"
        app:fontName="Nunito-Regular.ttf" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvQueDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text=""
        android:textColor="@color/colorSecondaryText"
        android:textSize="16sp"
        android:textStyle="normal"
        app:fontName="Nunito-Light.ttf" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/light_grey"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:text="correct answer"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp"
        android:textStyle="normal"
        app:fontName="Nunito-Regular.ttf" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCorrectAns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:text=""
        android:textColor="@color/colorSecondaryText"
        android:textSize="16sp"
        android:textStyle="normal"
        app:fontName="Nunito-Light.ttf" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#F2F2F2"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@color/light_grey">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvYour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:text="your answer"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:textStyle="normal"
                app:fontName="Nunito-Regular.ttf" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvYour"
                android:gravity="center"
                android:text="✔"
                android:textColor="@color/soothing_green"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:fontName="Nunito-Regular.ttf" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/tvYour"
                android:gravity="center"
                android:text="✘"
                android:textColor="@color/pink_five"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:fontName="Nunito-Regular.ttf" />

            <!--<androidx.appcompat.widget.AppCompatTextView-->
                <!--android:id="@+id/tvUnanswerd"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginLeft="2dp"-->
                <!--android:layout_toRightOf="@+id/tvYour"-->
                <!--android:gravity="center"-->
                <!--android:text=" ?!"-->
                <!--android:textColor="@color/colorAccent"-->
                <!--android:textSize="20sp"-->
                <!--android:textStyle="bold"-->
                <!--android:visibility="gone"-->
                <!--app:fontName="Nunito-Regular.ttf" />-->
        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvYourAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:text=""
            android:textColor="@color/colorSecondaryText"
            android:textSize="16sp"
            android:textStyle="normal"
            app:fontName="Nunito-Light.ttf" />


    </LinearLayout>


</LinearLayout>