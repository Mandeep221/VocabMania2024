<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:src="@drawable/search_icon" />

            <com.msarangal.vocabmania.MyAutoCompleteEditText
                android:id="@+id/et_find"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_centerInParent="true"
                android:background="@drawable/custom_edittext"
                android:ellipsize="end"
                android:hint="enter a word"
                android:paddingLeft="16dp"
                android:popupBackground="#ffffff"
                android:textColor="#666666"
                android:textColorHint="#66666666"
                android:textCursorDrawable="@null"
                app:FontAuto="Cabin-Regular.otf">


            </com.msarangal.vocabmania.MyAutoCompleteEditText>

        </LinearLayout>

        <View
            android:background="@color/light_grey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="16dp">

            <com.msarangal.vocabmania.MyButton
                android:id="@+id/btnCancel"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CANCEL"
                android:textColor="@color/pink_five"
                app:FontButton="Nunito-Bold.ttf" />

            <com.msarangal.vocabmania.MyButton
                android:id="@+id/btnFind"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="FIND"
                android:textColor="@color/pink_five"
                app:FontButton="Nunito-Bold.ttf" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>