<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/favorite_row_selector">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:text="Obstinate"
        android:textColor="#727272"
        android:textSize="18sp"
        app:fontName="Nunito-Regular.ttf" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/meaning"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/word"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:text="marked by tenacious unwillingness to yield"
        android:textColor="#727272"
        android:textSize="16sp"
        app:fontName="Nunito-Light.ttf" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/meaning"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:background="#B6B6B6" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circlewithshadow"></RelativeLayout>

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circlewithshadowbutton"
            android:gravity="center"
            android:onClick="back"
            android:text="âœ•"
            android:textColor="@color/pink_five"
            android:textSize="12sp"
            android:textStyle="bold"
            app:NameOfFont="RacingSansOne-Regular.ttf"></Button>
    </RelativeLayout>
</RelativeLayout>



