<resources>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">#E6E6E6</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:listDivider">@color/light_grey</item>
        <item name="android:textColorSecondary">@color/colorHighlight</item>
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>

    </style>

    <style name="toolbar_theme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:itemBackground">@color/colorWhite</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/tabTextColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MyTabLayoutTextAppearanceInMatch" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tabTextColor</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="NavtextAppearance" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Toolbar_Popup" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/colorSecondaryText</item>
        <item name="android:background">@color/colorWhite</item>

    </style>

</resources>
